{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "How does a country's GDP per capita relate to happiness?",
    "data": {
    "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/Week10_Homework/WHR_2023.csv"
    },
    "layer": [
        {
            "selection": {
                "region_highlight": {
                    "type": "multi",
                    "fields": ["region"],
                    "bind": "legend"
                }
            },
            "mark": "circle",
            "encoding": {
                "x": {
                "field": "gdp_per_capita",
                "type": "quantitative",
                "title": "GDP Per Capita"
                },
                "y": {
                "field": "happiness_score",
                "type": "quantitative",
                "title": "Happiness Score"
                },
                "color": {
                "field": "region",
                "type": "nominal",
                "title": "Region"
                },
                "opacity": {
                    "condition": {"selection": "region_highlight", "value": 1},
                    "value": 0.1
                },
                "tooltip": [
                    {"field": "country", "type": "nominal", "title": "Country"},
                    {"field": "region", "type": "nominal", "title": "Region"},
                    {"field": "happiness_score", "type": "quantitative", "title": "Happiness Score"},
                    {"field": "gdp_per_capita", "type": "quantitative", "title": "GDP Per Capita"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {
                    "field": "gdp_per_capita",
                    "type": "quantitative",
                    "title": "GDP Per Capita"
                    },
                    "y": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "title": "Happiness Score"
                    },
                "text": {"field": "country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Malaysia'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}
