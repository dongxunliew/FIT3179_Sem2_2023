{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Happiness Score by Country (2023)",
    "width": 900,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "layer": [

        {
            "data": {
                "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/oceans.json",
                "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke":"lightgray"}
        },



        {
            "data": {
                "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
              "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "#757575", "strokeWidth": 1}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "transform": [
                {
                  "lookup": "properties.NAME",
                  "from": {
                    "data": {
                      "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/data/WHR_2023.csv"
                    },
                    "key": "country",
                    "fields": ["happiness_score"]
                  }
                },
                {"calculate": "datum.happiness_score", "as": "Happiness Score"}
              ],
              "mark": {
                  "type": "geoshape",
                  "stroke": "#757575",
                  "strokeWidth": 1
                },
              "encoding": {
                "color": {
                  "field": "Happiness Score",
                  "type": "quantitative",
                  "scale": {"type": "log", "range": ["#fff7bc", "#fec44f", "#d95f0e"]}
                },
                "tooltip": [
                  {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                  {"field": "Happiness Score", "type": "quantitative"}
                ]
              }
        }

    ]
   
  }