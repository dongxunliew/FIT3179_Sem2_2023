{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness Score by Country",
  "width": 900,
  "height": 500,
  "params": [
      {
          "name": "year_selection",
          "value": 2023,
          "bind": {
              "input": "range",
              "min": 2015,
              "max": 2023,
              "step": 1,
              "name": "Year: "
          }
      }
  ],
  "projection": {"type": "equalEarth"},
  "layer": [

      {
          "data": {
              "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/oceans.json",
              "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
      },

      {
          "data": {
              "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke":"lightgray"}
      },



      {
          "data": {
              "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
            "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "#757575", "strokeWidth": 1}
      },

      {
          "data": {
              "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/data/happiness_2015_2023.csv"
            },
            "transform": [
              {
                "lookup": "country",
                "from": {
                  "data": {
                      "url": "https://raw.githubusercontent.com/dongxunliew/FIT3179_Sem2_2023/main/DataViz2/vis/ne_110m_countries.json",
                      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                  },
                  "key": "properties.NAME"
                },
                "as": "geo"
              },
              {"calculate": "datum.happiness_score", "as": "Happiness Score"},
              {"filter": "datum.year == year_selection"}

            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#757575",
                "strokeWidth": 1
              },
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {
                "field": "Happiness Score",
                "type": "quantitative",
                "scale": {"type": "log", "range": ["#e5f5f9", "#99d8c9", "#2ca25f"]}
              },
              "tooltip": [
                {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                {"field": "Happiness Score", "type": "quantitative"}
              ]
            }
      }

  ]
 
}